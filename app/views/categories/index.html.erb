<main id="categories">
  <%= render "shared/header" %>
  <%= render "shared/menu" %>

  <div class="categories-wrapper mt-3">
    <% @categories.each do |category| %>
      <%= link_to category do %>
        <%= render category %>
      <% end %>
    <% end %>
  </div>
</main>

<div class="categories-btn-wrapper py-3">
  <%= link_to "New Category", new_category_path, class: 'btn btn-outline-light rounded-0 m-auto d-block' %>
</div>
